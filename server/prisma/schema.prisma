generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  githubId  Int    @unique
  username  String @unique
  name      String
  bio       String
  avatarURL String
  githubURL String

  projects Project[]
}

model Project {
  id            String   @id @default(uuid())
  title         String
  description   String
  repositoryURL String
  projectURL    String
  techs         String[]
  likes         Int
  likedBy       String[]
  createdAt     DateTime @default(now())

  userId  String
  imageId String @unique

  user  User  @relation(fields: [userId], references: [id])
  image Image @relation(fields: [imageId], references: [id])
}

model Image {
  id        String   @id @default(uuid())
  url       String
  createdAt DateTime @default(now())

  project Project?
}
